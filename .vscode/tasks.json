{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "npm",
      "script": "dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "\\s*(?:ERROR|WARNING|INFO)\\s*in\\s*(.*)\\((\\d+),(\\d+)\\)\\s*TS(\\d+)\\s*:\\s*(.*)",
          "file": 1,
          "line": 2,
          "column": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "compiled .*successfully.*",
          "endsPattern": "Compiled .*successfully.*"
        }
      }
    },
    {
      "label": "build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "test",
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "typecheck",
      "type": "npm",
      "script": "typecheck",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "fmt",
      "type": "npm",
      "script": "fmt",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "quality-check",
      "type": "shell",
      "command": "npm run fmt && npm run lint && npm run typecheck",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish", "$tsc"]
    },
    {
      "label": "test:watch",
      "type": "shell",
      "command": "npm test -- --watch",
      "group": "test",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": {
        "owner": "jest",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^\\s*at\\s+.*\\s+\\((.*):(\\d+):(\\d+)\\)$",
          "file": 1,
          "line": 2,
          "column": 3
        }
      }
    }
  ]
}
